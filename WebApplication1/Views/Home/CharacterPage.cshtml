@model List<GameWebApplication.Models.Character>

@{
    ViewBag.Title = "Character View";
}

<h2>CharacterPage</h2>

<div>
    <h4>Character</h4>
    <hr />
    <select>
        @foreach (var character in Model)
        {

        <option>
            @character.Name
        </option>

        }
    </select>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model[0].Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model[0].Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model[0].Inventory)
        </dt>

        <dd>
            @Html.DisplayFor(model => model[0].InventoryId)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
