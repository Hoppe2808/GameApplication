@model GameWebApplication.Models.ViewModels.EditCharacterViewModel

@{
    ViewBag.Title = $"Edit character";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit @Model.CharacterName</h2>

@using (Html.BeginForm("EditCharacter", "Statistics", FormMethod.Post, new { @class = "changeChar_class" }))
{
    <div class="form-group">
        <label asp-for="CharacterName">Name</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CharacterName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CharacterName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Kills, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Kills, new { @class = "form-control", @type = "number" })
            @Html.ValidationMessageFor(m => m.Kills, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Deaths, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Deaths, new { @class = "form-control", @type = "number" })
            @Html.ValidationMessageFor(m => m.Deaths, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TotalMoney, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.TotalMoney, new { @class = "form-control", @type = "number" })
            @Html.ValidationMessageFor(m => m.TotalMoney, "", new { @class = "text-danger" })
        </div>
    </div>

