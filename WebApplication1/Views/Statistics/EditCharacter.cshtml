    @*     <input asp-for="TotalMoney" value="@Model.TotalMoney" class="form-control" /> *@
    @*     <input type="submit" class="btn btn-default" value="Update character" /> *@
    @* </form> *@

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update character" class="btn btn-default" />
        </div>
    </div>
    @Html.ValidationSummary()
